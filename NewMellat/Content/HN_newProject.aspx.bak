                                            <label for="state">اولویت :</label>
                                            <div class="form-select">
                                               <asp:DropDownList runat="server" ID="olaviat" DataSourceID="olaviatTypeDS" DataTextField="infTitle" DataValueField="infId" ></asp:DropDownList>
