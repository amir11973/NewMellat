    <script>
        $(document).ready(function () {
            $('#row1').hide();
            $('#col11').hide();
            $('#col12').hide();
            $('#col13').hide();
            $('#ContentPlaceHolder1_sanadType').change(function () {
                val = $(this).val();
                $('#row1').hide();
                $('#col11').hide();
                $('#col12').hide();
                $('#col13').hide();

                if (val == 413) {
                    $('#row1').show();
                    $('#col13').show();
                }
                else if (val == 414) {
                    $('#row1').show();
                    $('#col11').show();
                    $('#col12').show();
                }
                
            })
        })
    </script>
